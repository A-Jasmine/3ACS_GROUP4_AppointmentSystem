@page
@model WebBookingApp.Pages.setAvailabilitymodel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set Availability</title>
    <link rel="stylesheet" href="~/css/setAvailability.css">
    <script src="https://kit.fontawesome.com/0cc051477a.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="sidebar">
        <div class="profile">
            <img id="profileImage"
                 src="/dashboardStudent?handler=ProfilePicture&t=@DateTime.Now.Ticks"
                 alt="Profile Picture"
                 onclick="openUploadModal()">
            <div class="profile-info">
                <h3>@Model.FirstName @Model.LastName</h3>

            </div>
        </div>

        <ul>
            <p class="menu-text">Menu</p>

            <li><a asp-page="/dashboardProfessor"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
            <li><a asp-page="/manageAppointment"><i class="fas fa-calendar-alt"></i> Manage Appointments</a></li>
            <li><a asp-page=""><i class="fas fa-list-alt"></i> Appointment Lists</a></li>
            <li><a asp-page="/setAvailability"><i class="fas fa-clock"></i> Set Availability</a></li>
        </ul>

        <a href="#" class="logout" onclick="showLogoutModal()">
            <i class="fas fa-sign-out-alt"></i> Log out
        </a>
    </div>

    <!-- MAIN CONTENT -->

    <form method="post" class="main-content">
        <h1>Set Availability</h1>

        <label for="status">Status:</label>
        <select id="status" name="status" onchange="toggleFields()">
            <option value="">Select</option>
            <option value="available">Available</option>
            <option value="unavailable">Unavailable</option>
        </select>

     
        <div class="time-section" style="display:none;">
            <label for="start_time">Start Time:</label>
            <input type="time" id="start_time" name="start_time">

            <label for="end_time">End Time:</label>
            <input type="time" id="end_time" name="end_time">
        </div>


        <!-- ✅ Date input for Available -->
        <div class="available-date-section" style="display:none;">
            <label for="available_date">Available Date:</label>
            <input type="date" id="available_date" name="available_date">
        </div>

        <!-- ✅ Date input for Unavailable -->
        <div class="date-section" style="display:none;">
            <label for="unavailable_date">Unavailable Date:</label>
            <input type="date" id="unavailable_date" name="unavailable_date">
        </div>

        <button type="submit">Save</button>
    </form>

    <div class="availability-container">
        <h3>Your Availability</h3>

        <table class="availability-table">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.AvailabilityList != null && Model.AvailabilityList.Any())
                {
                    foreach (var item in Model.AvailabilityList)
                    {
                        <tr>
                            <td>@item.Status</td>

                            @if (item.Status?.ToLower() == "unavailable")
                            {
                                <td>@(string.IsNullOrEmpty(item.UnavailableDate) ? "N/A" : item.UnavailableDate)</td>
                                <td>-</td>
                            }
                            else
                            {
                                <td>@(string.IsNullOrEmpty(item.AvailableDate) ? "N/A" : item.AvailableDate)</td>
                                <td>@item.StartTime - @item.EndTime</td>
                            }

                            <!-- Delete Icon -->
                            <td>
                                <form method="post" asp-page-handler="DeleteAvailability">
                                    <input type="hidden" name="Status" value="@item.Status" />
                                    <input type="hidden" name="AvailableDate" value="@item.AvailableDate" />
                                    <input type="hidden" name="UnavailableDate" value="@item.UnavailableDate" />
                                    <input type="hidden" name="StartTime" value="@item.StartTime" />
                                    <input type="hidden" name="EndTime" value="@item.EndTime" />
                                    <button type="submit" class="delete-btn">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No availability records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>




    <!-- ✅ Script to toggle sections and limit past dates -->
    <script>
        function toggleFields() {
            const status = document.getElementById('status').value;
            document.querySelector('.time-section').style.display = (status === 'available') ? 'block' : 'none';
            document.querySelector('.available-date-section').style.display = (status === 'available') ? 'block' : 'none';
            document.querySelector('.date-section').style.display = (status === 'unavailable') ? 'block' : 'none';
        }

        // ✅ Set min date on page load to prevent past date selection
        window.onload = function () {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('unavailable_date').setAttribute('min', today);
            document.getElementById('available_date').setAttribute('min', today);
        };
    </script>


    <div id="uploadModal" class="modal">
        <div class="modal-content">
            <h2>Upload Profile Picture</h2>
            <form id="uploadForm" method="post" enctype="multipart/form-data" asp-page-handler="UploadPicture">
                <input type="file" name="UploadedFile" accept="image/*" required>
                <button type="submit">Upload</button>
            </form>

            <p id="uploadMessage"></p>
        </div>
    </div>



    <!-- ✅ Logout Modal -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <h2>Logout Confirmation</h2>
            <p>Are you sure you want to log out?</p>
            <div class="modal-buttons">
                <button class="logout-btn" onclick="confirmLogout()">Yes</button>
                <button class="cancel-btn" onclick="hideLogoutModal()">Cancel</button>
            </div>
        </div>
    </div>

    <!-- ✅ Hidden Logout Form -->
    <form id="logoutForm" method="post" asp-page-handler="Logout"></form>

    <script src="~/js/dashboardProfessor.js"></script>
</body>
</html>
