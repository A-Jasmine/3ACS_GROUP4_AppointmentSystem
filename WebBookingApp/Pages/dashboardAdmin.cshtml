@page
@model WebBookingApp.Pages.dashboardAdminModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboardAdmin.css">
    <script src="https://kit.fontawesome.com/0cc051477a.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="sidebar">
        <div class="profile">
            <img id="profileImage"
                 src="/dashboardStudent?handler=ProfilePicture&t=@DateTime.Now.Ticks"
                 alt="Profile Picture"
                 onclick="openUploadModal()">
            <div class="profile-info">
                <h3>@Model.FirstName</h3>  <!-- Displaying only FirstName (which now holds username) -->
            </div>

        </div>

        <ul>

            <!-- ✅ Added "Menu" Text -->
            <p class="menu-text">Menu</p>

            <li><a asp-page="/dashboardAdmin"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
            <li><a asp-page="/manageStudents"><i class="fas fa-users"></i> Manage students</a></li>
        </ul>

        <a href="#" class="logout" onclick="showLogoutModal()">
            <i class="fas fa-sign-out-alt"></i> Log out
        </a>
    </div>

    <div class="main-content">
        <h1>Welcome to the Admin Dashboard</h1>
    </div>


    <div id="uploadModal" class="modal">
        <div class="modal-content">
            <h2>Upload Profile Picture</h2>
            <form id="uploadForm" method="post" enctype="multipart/form-data" asp-page-handler="UploadPicture">
                <input type="file" name="UploadedFile" accept="image/*" required>
                <button type="submit">Upload</button>
            </form>

            <p id="uploadMessage"></p>
        </div>
    </div>



    <!-- ✅ Logout Modal -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <h2>Logout Confirmation</h2>
            <p>Are you sure you want to log out?</p>
            <div class="modal-buttons">
                <button class="logout-btn" onclick="confirmLogout()">Yes</button>
                <button class="cancel-btn" onclick="hideLogoutModal()">Cancel</button>
            </div>
        </div>
    </div>

    <!-- ✅ Hidden Logout Form -->
    <form id="logoutForm" method="post" asp-page-handler="Logout"></form>

    <script src="~/js/dashboardAdmin.js"></script>
</body>
</html>
